{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["error"],
    "no-constant-condition": 0
  },
  "globals": {
    "JSZip": true,
    "saveAs": true,
    "GM_registerMenuCommand": true,
    "GM_xmlhttpRequest": true
  }
}
